<Window x:Class="ControlNavegación.controlNav"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlNavegación"
        mc:Ignorable="d"
        Title="controlNav" Height="450" Width="800">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Inicio" Name="InicioTab">
                <Grid>
                    <TextBlock Text="Bienvenido a la página de inicio." HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                </Grid>
            </TabItem>
            <TabItem Header="Productos" Name="ProductosTab">
                <Grid>
                    <TextBlock Text="Aquí están los productos disponibles." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Contacto" Name="ContactoTab">
                <Grid>
                    <TextBlock Text="Póngase en contacto con nosotros." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
